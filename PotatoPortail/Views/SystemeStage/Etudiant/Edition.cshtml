@using PotatoPortail.Views.Shared.Widget.Model
@using PotatoPortail.Views.SystemeStage.Etudiant.EditionComponent.Models
@model PotatoPortail.Models.Etudiant

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Étudiant</h1>
    <form action="EnregistrerLesModifications" method="post">
        <input name="idEtudiant" type="hidden" value="@Html.DisplayFor(model => Model.IdEtudiant)"/>
        @* ReSharper disable once UnknownCssClass *@
        <div class="form-content">
            <div>
                @Html.Partial("Widget/_FlatUiTextInput",
                    new FlatUiTextInputModel(
                        "Prénom de l'étudiant",
                        "20px",
                        "prenom",
                        "text",
                        Model.Prenom,
                        null
                        )
                    )
            </div>
            <div>
                @Html.Partial("Widget/_FlatUiTextInput",
                    new FlatUiTextInputModel(
                        "Nom de l'étudiant",
                        "20px",
                        "nomDeFamille",
                        "text",
                        Model.NomDeFamille,
                        null
                        )
                    )
            </div>
            <div>
                @Html.Partial("Widget/_FlatUiTextInput",
                    new FlatUiTextInputModel(
                        "Téléphone",
                        "20px",
                        "telephone",
                        "tel",
                        Model.Telephone,
                        null
                        )
                    )
            </div>
            <div>
                @Html.Partial("Widget/_FlatUiTextInput",
                    new FlatUiTextInputModel(
                        "Courriel scolaire",
                        "20px",
                        "courrielEcole",
                        "text",
                        Model.CourrielEcole,
                        null
                        )
                    )
            </div>
            <div>
                @Html.Partial("Widget/_FlatUiTextInput",
                    new FlatUiTextInputModel(
                        "Courriel personnel",
                        "20px",
                        "courrielPersonnel",
                        "text",
                        Model.CourrielPersonnel,
                        null
                        )
                    )
            </div>
            <div>
                @Html.Partial("Widget/_FlatUiTextInput",
                    new FlatUiTextInputModel(
                        "Code permanent",
                        "20px",
                        "codePermanent",
                        "text",
                        Model.CodePermanent,
                        null
                        )
                    )
            </div>
            <div>
                @Html.Partial("Widget/_FlatUiTextInput",
                    new FlatUiTextInputModel(
                        "Numéro de DA",
                        "20px",
                        "numeroDa",
                        "text",
                        Model.NumeroDa,
                        null
                        )
                    )
            </div>
            <div>
                @Html.Partial("Widget/_FlatUiSelect", new FlatUiSelect(
                    "Rôle",
                    "role",
                    new List<FlatUiOption>
                    {
                        new FlatUiOption("Étudiant", "etudiant"),
                        new FlatUiOption("Stagière", "stagiere")
                    }))
            </div>
            
            <h2>Préférences</h2>
            
            @Html.Partial("EditionComponent/PreferenceEditor", new PreferenceEditor(Model.Preference))
            
            @Html.Partial("Widget/_FlatUiButton", new FlatUiButton("Soumettre"))
        </div>
    </form>
</div>