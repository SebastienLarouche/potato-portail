@model PotatoPortail.Models.eSports.Entraineur
@{
    ViewBag.Titre = "Suppression d'un entraîneur";
    <input type="hidden" id="tableRecherche" name="tableRecherche" value="Entraineur">
}
<div class="container" style="margin-bottom: 5%;">
    <div class="box">
        <header class="light-header">
            <h1>Suppression de l'entraîneur @Model.NomComplet (@Model.PseudoEntraineur)</h1>
        </header>
        <h3>Êtes-vous sûr de vouloir supprimer cet entraîneur?</h3>
        <div>
            <div class="element">
                @Html.LabelFor(model => model.NumeroTelephone)
                @Html.DisplayFor(model => model.NumeroTelephone)
            </div>
            <div class="element">
                @Html.LabelFor(model => model.AdresseCourriel)
                @Html.DisplayFor(model => model.AdresseCourriel)
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="menu-flottant">
                <a class="fancy-button blanc" href="@Url.Action("Index", "Entraineur")">
                    <span class="glyphicon glyphicon-triangle-left"></span>
                    Annuler
                </a>
                <input type="submit" value="Confirmer la suppression" class="fancy-button blanc"/>
            </div>
        }
    </div>
</div>