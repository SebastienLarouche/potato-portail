@model PotatoPortail.Models.Item
@{
    ViewBag.Titre = "Modification d'item";
}
<div class="container">
    <div class="form-box">
<header class="light-header">
    <h3>Modification de l'item «@Model.NomItem» pour «@Model.Caracteristique.NomCaracteristique» (@Model.Caracteristique.Jeu.NomJeu)</h3>
</header>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
        

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @Html.Label("Nouveau nom")
                    @Html.TextBoxFor(model => model.NomItem, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NomItem, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.IdCaracteristique, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.HiddenFor(model => model.IdCaracteristique, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdCaracteristique, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="menu-flottant">
            <a class="fancy-button blanc" onclick="window.history.back()">
                <span class="glyphicon glyphicon-triangle-left"></span>
                Annuler
            </a>
            <input type="submit" value="Renommer «@Model.NomItem»" class="fancy-button blanc"/>
        </div>
}

        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
