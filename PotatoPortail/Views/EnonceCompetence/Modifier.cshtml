@model PotatoPortail.Models.EnonceCompetence

@{
    ViewBag.Titre = "Modification d'un énoncé de compétence";
    <input type="hidden" id="tableRecherche" name="tableRecherche" value="EnonceCompetence">
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdDevis)
    <div class="container">
        <div class="form-box">
            <header class="light-header">
                <h1>@ViewBag.Titre</h1>
            </header>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.ValidationMessage("Duplique", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.CodeCompetence)
                @Html.TextBoxFor(m => m.CodeCompetence, new { @maxlength = "4", @class = "form-control small" })
                @Html.ValidationMessageFor(m => m.CodeCompetence, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @rows = "3", @maxlength = "300", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Obligatoire)
                        @Html.CheckBoxFor(m => m.Obligatoire)
                        @Html.ValidationMessageFor(m => m.Obligatoire, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Actif)
                        @Html.CheckBoxFor(m => m.Actif)
                        @Html.ValidationMessageFor(m => m.Actif, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr />
            <input type="submit" value="Suivant" class="fancy-button" />
            <div class="fancy-button rouge" onclick="location.href='@Url.Action("Info", "EnonceCompetence", new { idCompetence = Model.IdCompetence })'">Annuler</div>
        </div>
    </div>
}
