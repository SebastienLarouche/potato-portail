@model PotatoPortail.Models.eSports.Caracteristique

@{
    ViewBag.Titre = Model.NomCaracteristique + " - " + ViewBag.nomJeu;
}

<div class="container">

    <div class="form-box">


        <header class="light-header">
            <h3>Modification de la caractéristique «@ViewBag.nomCarac» pour «@ViewBag.nomJeu»</h3>
        </header>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.Id)


            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        @Html.Label("Nouveau nom")
                        @Html.TextBoxFor(model => model.NomCaracteristique, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.NomCaracteristique, "", new {@class = "text-danger"})
                    </div>
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.IdJeu)
                        @Html.HiddenFor(model => model.IdJeu, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.IdJeu, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>


            <div class="menu-flottant">
                <a class="fancy-button blanc" onclick="window.history.back()">
                    <span class="glyphicon glyphicon-triangle-left"></span>
                    Annuler
                </a>
                <input type="submit" value="Renommer «@ViewBag.nomCarac»" class="fancy-button blanc"/>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}