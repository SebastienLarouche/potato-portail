@model PotatoPortail.Models.DevisMinistere

@{
    ViewBag.Titre = "Modification d'un devis ministériel";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdDevis)

    <div class="container">
        <div class="form-box">

            <header class="light-header">

                <h1>@ViewBag.Titre</h1>

            </header>

            <div class="row">
                <div class="col-md-8">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.ValidationMessage("Duplique", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Discipline)
                        @Html.DropDownList("discipline", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Discipline, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Annee)
                        @Html.TextBoxFor(m => m.Annee, new { @class = "form-control small", @maxlength = 4, @onkeydown = "return (!(event.keyCode>=65) && event.keyCode!=32);", @Value = @Model.Annee })
                        @Html.ValidationMessageFor(m => m.Annee, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.CodeSpecialisation)
                        @Html.TextBoxFor(m => m.CodeSpecialisation, new { @class = "form-control small", @maxlength = 2, @Value = @Model.CodeSpecialisation})
                        @Html.ValidationMessageFor(m => m.CodeSpecialisation, "", new { @class = "text-danger" })
                    </div>

                    <hr />

                    <input type="submit" value="Confirmer" class="fancy-button" />
                    <a href='@Url.Action("Index")' class="fancy-button rouge">Annuler</a>

                </div>
            </div>
        </div>
    </div>
}
