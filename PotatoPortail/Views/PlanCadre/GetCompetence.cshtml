@model ApplicationPlanCadre.ViewModels.CompetenceViewModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group" id="divPartialView">
        @Html.LabelFor(model => model.ElementCompetence, "Éléments", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.listeElement, (IEnumerable<SelectListItem>)Model.ElementCompetences, htmlAttributes: new { @name="listeElement", @class = "form-control", @id = "elements", @onchange = "addElements()" })
            @Html.ValidationMessageFor(model => model.ElementCompetence, "", new { @class = "text-danger" })

            
            <div id="elementBox"></div>
        </div>
    </div>
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("#drop").on("change", function () {
        var idCompetence = $("#drop").val();
        $.ajax({
            url: '@Url.Action("GetCompetence", "PlanCadre")',
            type: 'GET',
            data: { CVM: @Model, id: idCompetence },
            dataType: "html",
            success: function (data) {
                $("#divPartialView").html(data);
            }
            });
        });
</script>
<script>

    function ajoutPPrincipal(nom) { //Permet l'ajout dynamique d'un point principal
        var pointprincipal = '@Html.LabelFor(model => model.ElementCompetence, "Éléments", htmlAttributes: new { @class = "control - label col - md - 2" })@Html.DropDownList("Éléments", (IEnumerable<SelectListItem>)Model.ElementCompetences, htmlAttributes: new { @class = "form-control", @name = "codeCompetence"})@Html.ValidationMessageFor(model => model.ElementCompetence, "", new { @class = "text-danger" })';
    document.getElementById(nom).insertAdjacentHTML("beforebegin", pointprincipal);
    idSP.push(0);
    idPP++;
}
</script>
<script src="@Url.Content("~/Scripts/elementsCompetence.js")"></script>
